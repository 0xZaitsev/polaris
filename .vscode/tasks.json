{
	"version": "2.0.0",
	"presentation": {
		"reveal": "always"
	},
	"tasks": [
		// Run test environment
		{
			"label": "Run",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "cargo",
			"args": [
				"run",
				"--",
				"-c",
				"./TestConfigWindows.toml",
				"-d",
				"test/db.sqlite",
				"-w",
				"../polaris-web"
			]
		},
		// Run unit tests
		{
			"group": "test",
			"label": "Test",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "cargo",
			"args": [
				"test"
			]
		},
		// Compile
		{
			"label": "Compile",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "cargo",
			"args": [
				"check"
			]
		}
	]
}